{
  "$schema": "https://raw.githubusercontent.com/GeekyEggo/SharpDeck/master/src/SharpDeck.PropertyInspector/manifest-schema.json",
  "Name": "Govee Controller",
  "Version": "1.0.0",
  "Author": "GeekyEggo",
  "Actions": [
    {
      "Name": "On / Off",
      "UUID": "com.geekyeggo.goveecontroller.turnonoff",
      "Icon": "Images/TurnOnOff/Action",
      "Tooltip": "Turns a device on or off",
      "PropertyInspectorPath": "pi/turnonoff.html",
      "States": [
        {
          "FontSize": "12",
          "Image": "Images/TurnOnOff/Key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Brightness",
      "UUID": "com.geekyeggo.goveecontroller.brightness",
      "Icon": "Images/Brightness/Action",
      "Tooltip": "Sets the brightness of a device",
      "PropertyInspectorPath": "pi/brightness.html",
      "States": [
        {
          "FontSize": "12",
          "Image": "Images/Brightness/Key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Color",
      "UUID": "com.geekyeggo.goveecontroller.color",
      "Icon": "Images/Color/Action",
      "Tooltip": "Sets the color of a device",
      "PropertyInspectorPath": "pi/color.html",
      "States": [
        {
          "FontSize": "12",
          "Image": "Images/Color/Key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "Name": "Color Temperature",
      "UUID": "com.geekyeggo.goveecontroller.colortemperature",
      "Icon": "Images/ColorTemperature/Action",
      "Tooltip": "Sets the color temperature of a device",
      "PropertyInspectorPath": "pi/colortemperature.html",
      "States": [
        {
          "FontSize": "12",
          "Image": "Images/ColorTemperature/Key",
          "TitleAlignment": "bottom"
        }
      ]
    }
  ],
  "Category": "Govee Controller",
  "CategoryIcon": "Images/GoveeController/Category",
  "CodePath": "GoveeController.exe",
  "Description": "Take control of your Govee lights with the push of a button!",
  "Icon": "Images/GoveeController/Icon",
  "SDKVersion": 2,
  "Software": {
    "MinimumVersion": "4.1"
  },
  "OS": [
    {
      "MinimumVersion": "10",
      "Platform": "windows"
    }
  ]
}

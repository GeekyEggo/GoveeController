{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
    
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Stream Deck Plugin",
			"program": "${workspaceFolder}/com.geekyeggo.goveecontroller.sdPlugin/bin/plugin.js",
			"args": [
				"-port",
				"12345",
				"-pluginUUID",
				"com.geekyeggo.goveecontroller",
				"-registerEvent",
				"registerPlugin",
				"-info",
				"{}"
			],
			"console": "integratedTerminal",
			"outFiles": ["${workspaceFolder}/com.geekyeggo.goveecontroller.sdPlugin/bin/**/*.js"],
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"preLaunchTask": "npm: build"
		}
	]
}

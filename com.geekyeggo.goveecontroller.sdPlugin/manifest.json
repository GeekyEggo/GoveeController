{
	"$schema": "../node_modules/@elgato/streamdeck/schemas/manifest.json",
	"Name": "Govee Controller",
	"Version": "1.2.3",
	"Author": "GeekyEggo",
	"URL": "https://github.com/GeekyEggo/GoveeController",
	"Actions": [
		{
			"Name": "On / Off",
			"UUID": "com.geekyeggo.goveecontroller.turnonoff",
			"Icon": "imgs/actions/turn-on-off/action",
			"PropertyInspectorPath": "pi/turn-on-off.html",
			"Tooltip": "Turns a device on or off",
			"States": [
				{
					"FontSize": "12",
					"Image": "imgs/actions/turn-on-off/key",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Brightness",
			"UUID": "com.geekyeggo.goveecontroller.brightness",
			"Icon": "imgs/actions/brightness/action",
			"Tooltip": "Sets the brightness of a device",
			"PropertyInspectorPath": "pi/brightness.html",
			"States": [
				{
					"FontSize": "12",
					"Image": "imgs/actions/brightness/key",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Color",
			"UUID": "com.geekyeggo.goveecontroller.color",
			"Icon": "imgs/actions/color/action",
			"Tooltip": "Sets the color of a device",
			"PropertyInspectorPath": "pi/color.html",
			"States": [
				{
					"FontSize": "12",
					"Image": "imgs/actions/color/key",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Color Temperature",
			"UUID": "com.geekyeggo.goveecontroller.colortemperature",
			"Icon": "imgs/actions/color-temperature/Action",
			"Tooltip": "Sets the color temperature of a device",
			"PropertyInspectorPath": "pi/color-temperature.html",
			"States": [
				{
					"FontSize": "12",
					"Image": "imgs/actions/color-temperature/Key",
					"TitleAlignment": "bottom"
				}
			]
		}
	],
	"Category": "Govee Controller",
	"CategoryIcon": "imgs/plugin/category",
	"CodePath": "bin/plugin.js",
	"Description": "Take control of your Govee lights with the push of a button!",
	"Icon": "imgs/plugin/icon",
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.4"
	},
	"OS": [
		{
			"MinimumVersion": "10",
			"Platform": "windows"
		},
		{
			"MinimumVersion": "10.11",
			"Platform": "mac"
		}
	]
}
